{
  "manifest_version": 3,
  "name": "SN-TechTools",
  "version": "1.0.0",
  "description": "Browser Extension to enhance IT technician experience and productivity in ServiceNow",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
